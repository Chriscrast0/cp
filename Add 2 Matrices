#include<stdio.h>
#include<conio.h>
void main()
{
int i,j,a[2][2],b[2][2],sum[2][2];
clrscr();
printf("enter the numbers");
for(i=0;i<2;i++)
{
 for(j=0;j<2;j++)
  {
    scanf("%d",&a[i][j]);
   }
 }
printf("enter the numbers");
for(i=0;i<2;i++)
{
 for(j=0;j<2;j++)
  {
    scanf("%d",&b[i][j]);
   }
 }
printf("the sum of the arrays are:\n");
for(i=0;i<2;i++)
{
 for(j=0;j<2;j++)
  {
    sum[i][j]=a[i][j]+b[i][j];
printf("%d",sum[i][j]);
}
printf("\n");
}
getch();
}
