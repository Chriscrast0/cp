#include<stdio.h>
#include<conio.h>
void main()
{
int n=0,i,counter=0;
char str[20];
clrscr();
printf("enter the word");
scanf("%s",str);
while(str[n]!='\0') n++;
for(i=0;i<(n/2)-1;i++) counter=str[i]-str[(n-1)-i];
if(counter==0) printf("the entered word is a palindrome word");
else printf("the entered word is not a palindrome word");
getch();
}
